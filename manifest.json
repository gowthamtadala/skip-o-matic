{
  "manifest_version": 3,
  "name": "Skip-O-Matic: Hands-Free Ad Skipper",
  "version": "1.0",
  "description": "Automatically skips ads and speeds up unskippable ones.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon48.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "48": "icon48.png"
  }
}